{
  "extends": "tslint:latest",
  "linterOptions": {
    "exclude": [
      "**/node_modules/**",
      "**/coverage/**",
      "**/dist/**",
      "**/docs/**"
    ]
  },
  "rules": {
    "no-console": [
      true,
      "log",
      "debug"
    ],
    "no-reference": false,
    "no-submodule-imports": [
      true,
      "@angular/common/locales",
      "@angular/core/testing",
      "@ionic-native/camera/ngx",
      "@ionic-native/file/ngx",
      "@ionic-native/keyboard/ngx",
      "@ionic-native/network/ngx",
      "@ionic-native/onesignal/ngx",
      "@ionic-native/splash-screen/ngx",
      "@santech/analytics-core/testing",
      "@santech/angular-common/testing",
      "@santech/angular-cropper/testing",
      "@santech/angular-pica/testing",
      "@santech/angular-platform/testing",
      "@santech/common/testing",
      "@santech/core/testing",
      "@santech/websocket/testing",
      "rxjs/operators"
    ],
    "no-unused-expression": false,
    "quotemark": [
      true,
      "single"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ]
  },
  "jsRules": {
    "quotemark": [
      true,
      "single"
    ]
  }
}