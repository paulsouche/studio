{
  "name": "@santech/angular-platform",
  "version": "7.0.0-alpha.1",
  "description": "santech angular platform module",
  "main": "dist/bundles/santech-angular-platform.umd.js",
  "module": "dist/esm5/santech-angular-platform.js",
  "es2015": "dist/esm2015/santech-angular-platform.js",
  "types": "dist/index.d.ts",
  "typings": "dist/santech-angular-platform.d.ts",
  "scripts": {
    "build": "npm run clean && ng-packagr -p ng-package.json && npm run docs",
    "clean": "rimraf dist docs coverage dist.tgz",
    "docs": "typedoc src/index.ts",
    "lint": "tslint \"**/*.ts\" \"**/*.js\"",
    "test": "jest --coverage",
    "test-watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/santech-org/studio"
  },
  "keywords": [
    "santech",
    "studio",
    "angular",
    "platform"
  ],
  "author": "Paul Souche <psouche@santech.fr>",
  "license": "MIT",
  "peerDependencies": {
    "@angular/common": "^5.0.0",
    "@angular/core": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "*",
    "@types/node": "*",
    "@angular/common": "*",
    "@angular/compiler": "*",
    "@angular/compiler-cli": "*",
    "@angular/core": "*",
    "@angular/platform-browser": "*",
    "@angular/platform-browser-dynamic": "*",
    "@santech/core": "^7.0.0-alpha.1",
    "jest": "*",
    "jest-localstorage-mock": "*",
    "jest-preset-angular": "*",
    "ng-packagr": "*",
    "rimraf": "*",
    "rxjs": "^5.0.0",
    "ts-helpers": "*",
    "tsickle": "*",
    "tslib": "*",
    "typedoc": "*",
    "typescript": "*",
    "whatwg-fetch": "*",
    "zone.js": "*"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "src/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>../../node_modules/jest-preset-angular/preprocessor.js"
    },
    "preset": "jest-preset-angular",
    "roots": [
      "<rootDir>/src/"
    ],
    "setupFiles": [
      "ts-helpers",
      "whatwg-fetch",
      "jest-localstorage-mock"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/setup-jest.ts",
    "snapshotSerializers": [
      "<rootDir>../../node_modules/jest-preset-angular/AngularSnapshotSerializer.js",
      "<rootDir>../../node_modules/jest-preset-angular/HTMLCommentSerializer.js"
    ]
  }
}
