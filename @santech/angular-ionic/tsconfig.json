{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "target": "es2015",
    "skipLibCheck": true,
    "allowJs": true
  },
  "files": [
    "./src/index.ts",
    "./testing/index.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "./build.ts",
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "dist/docs",
    "exclude": "test",
    "theme": "default",
    "ignoreCompilerErrors": true,
    "excludePrivate": true,
    "excludeNotExported": false,
    "target": "es2015",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "stripInternal": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs"
  }
}